<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoppe Clone - Products</title>
    <%- include('common/linkrels.ejs') %>
</head>
<body>
    <div class="content">
        <%- include('common/nav.ejs') %>
        <div class="back">
            <div class="row">
                <div class="col">
                    <a class="btn" href="/shops/<%= product.shop_id %>">< </a>&nbsp;<span class="back-product-name"><strong><%= product.name %></strong></span>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= product.image %>">
                </div>
                <div class="col-md-8">
                    <div class="product-desc">
                        <h1><%= product.name %></h1>
                        <p><%= product.description %></p>
                    </div>
                    <div class="product-action">
                        <div class="row">
                            <div class="col">
                                <div class="button-group">
                                    <button id="minus">-</button>
                                    <input type="number" value="1" min="1" maxlength="<%= product.qty %>" readonly id="qty">
                                    <button id="plus">+</button>
                                </div>
                            </div>
                            <div class="col">
                                <h5>PRICE <%= product.price %></h5>
                                <a href="/checkout/<%= product.shop_id %>/<%= product.id %>" id="buy" class="btn btn-danger">BUY</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('common/script.ejs') %>
</body>
</html>