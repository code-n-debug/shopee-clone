<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoppe Clone - Products</title>
    <%- include('common/linkrels.ejs') %>
</head>
<body>
    <div class="content">
        <%- include('common/nav.ejs') %>
        <div class="back">
            <div class="row">
                <div class="col">
                    <a class="btn" href="/products">< </a>&nbsp;<span class="back-product-name"><strong>Product 1</strong></span>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="https://placehold.it/300x300">
                </div>
                <div class="col-md-8">
                    <div class="product-desc">
                        <h1>Product Name</h1>
                        <p>Description</p>
                    </div>
                    <div class="product-action">
                        <div class="row">
                            <div class="col">
                                <div class="button-group">
                                    <button id="minus">-</button>
                                    <input type="number" value="1" min="1" readonly id="qty">
                                    <button id="plus">+</button>
                                </div>
                            </div>
                            <div class="col">
                                <h5>PRICE 10000</h5>
                                <a href="/checkout" class="btn btn-danger">BUY</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('common/script.ejs') %>
</body>
</html>