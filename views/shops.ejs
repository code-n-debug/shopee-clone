<div class="shops">
    <div class="row">
        <% for( let i = 0; i < shops.length; i++ ) { %>
            <div class="col gap">
                <div class="card" style="width: 18rem;">
                    <img src="<%= shops[i].logo %>" class="card-img-top" alt="<%= shops[i].name %>">
                    <div class="card-body">
                    <h5 class="card-title"><%= shops[i].name %></h5>
                    <p class="card-text"><%= shops[i].description %></p>
                    <a href="/shops/<%= shops[i].id %>" class="btn btn-primary">View Products</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>